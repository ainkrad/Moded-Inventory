<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="paperformat_custom" model="report.paperformat">
            <field name="name">Letter</field>
            <field name="default" eval="True"/>
            <field name="format">Letter</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">20</field>
            <field name="margin_bottom">25.4</field>
            <field name="margin_left">20</field>
            <field name="margin_right">20</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">0</field>
            <field name="dpi">90</field>
        </record>

        <report
            id="policy_reports"
            model="print.policy"
            string="Policy"
            name="loan_application.policy_report_view"
            file="loan_application.policy_report_view"
            report_type="qweb-pdf"
            paperformat="paperformat_custom"
            menu="False"
        />

        <template id="policy_report_view">
            <t t-call="report.html_container">
                <t t-call="report.internal_layout">
                    <t t-foreach="docs" t-as="d">
                        <div class="page" style="text-align: justify; text-align: justify;">
                            <p>
                                <h3>BIOCIELO REALTY &amp; DEVELOPMENT CORPORATION</h3>
                                3rd Floor Vensu Bldg., National Highway, General Santos City<br/>
                                Tel. No: 554-3853<br/>
                                <p><center><h2>POLICIES OF INTERMENT</h2></center></p>
                                <ul>
                                    <t t-foreach="d.policy_id" t-as="dp">
                                        <!--<li><p t-field="dp.name"/></li>-->
                                        <t t-foreach="dp.policies_ids" t-as="pi">
                                            <li><p t-field="pi.name"/></li>
                                        </t>
                                    </t>
                                    <!--<li><p t-set="policies_ids_1" t-value="d.report_policy"/></li>-->
                                </ul>
                                <p>The foregoing rules and regulations are subject to revisions, alterations or amendments
                                    from time to time as deemed necessary by Biocielo.<br/><br/>
                                    This is to comfirm that I have read and understood the guidelines and agree to fully conform
                                    with the above guidelines.<br/>

                                </p>
                                <br/>
                                <br/>
                                <p>
                                    <table style="text-align: center; table-layout: auto;">
                                        <tr>
                                            <td width="65%">
                                                _____________________________________<br/>
                                                <span t-field="d.name"/>
                                            </td>
                                            <td width="20%"></td>
                                            <td width="15%">
                                                <span t-field="d.dateDone"/>
                                            </td>
                                        </tr>
                                    </table>


                                </p>
                            </p>


                        </div>
                    </t>
                </t>
            </t>
        </template>




    </data>
</odoo>