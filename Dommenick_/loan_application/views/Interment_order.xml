<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="song_request" model="ir.ui.view">
            <field name="name">song.request.form</field>
            <field name="model">song.request</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="interment_order_form" model="ir.ui.view">
            <field name="name">interment.order.form</field>
            <field name="model">interment.order</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_title">
                            <h1><field name="name" readonly="1"/></h1>
                        </div>
                        <!--<group>-->
                            <!--<field string="Name of Departed" name="partner_id" options="{&quot;always_reload&quot;: True}" domain="[('customer', '=', True)]"/>-->
                        <!--</group>-->
                        <group>
                            <center><h3>INTERMENT INFORMATION</h3></center>
                        </group>
                        <br/>
                        <hr/>
                        <group>
                            <field name="NatureOfInterment" widget="radio" options="{'horizontal': true}"/>
                        </group>
                        <group>
                            <field name="nature_selection" invisible="1"/>

                            <group>
                                <field string="Name of Departed"
                                       name="partner_id"
                                       options="{&quot;always_reload&quot;: True}"
                                       domain="[('is_company', '=', False),('is_deceased','=', True)]"
                                       attrs="{'required':[('nature_selection','=',False)],'invisible':[('nature_selection','=', True)]}"
                                />
                                <field name="sale_id"/>
                            </group>
                            <group attrs="{'invisible':[('nature_selection','=', False)]}">
                                <field name="informant_ids" domain="[('is_deceased','=',False)]" string="Informant"/>
                            </group>
                        </group>
                        <group>
                            <group string="Interment Detail">
                                <field name="interment_datetime"/>
                            </group>
                            <group string="Mass Detail" attrs="{'invisible':[('nature_selection','=',True)]}">
                                <field name="mass_datetime"/>
                                <field name="mass_location"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Program" attrs="{'invisible':[('nature_selection','=', True)]}">
                                 <group>
                                    <field name="song_ids" nolabel="1" widget="many2many"/>
                                </group>
                            </page>
                            <page string="Bone Transfer" attrs="{'invisible':[('nature_selection','=', False)]}" autofocus="autofocus">
                                <field name="bone_transfer_ids" domain="[('is_company','=',False)]" nolabel="1">
                                    <tree>
                                        <field name="name"/>
                                        <field name="DateOfDeath"/>
                                        <field name="CauseOfDeath"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Other Information">
                                <group>
                                    <group><field name="casket_size" widget="radio" options="{'horizontal': true}"
                                                  attrs="{'invisible':[('nature_selection','=', True)]}"
                                    /></group>
                                    <group><field name="Wake_address" string="Wake Address"
                                                  attrs="{'invisible':[('nature_selection','=', True)]}"
                                    /></group>
                                </group>
                                <group>
                                    <group string="Remark">
                                        <field name="Lot_owner_id"/>
                                        <field name="title_name"/>
                                    </group>
                                    <group string="_">
                                        <field name="is_publish"/>
                                    </group>
                                </group>
                            </page>


                        </notebook>
                        <!--<group>-->
                            <!--<group>-->
                                <!--<field name="song_ids" nolabel="1" widget="one2many_list"/>-->
                            <!--</group>-->
                        <!--</group>-->
                    </sheet>
                </form>
            </field>
        </record>

