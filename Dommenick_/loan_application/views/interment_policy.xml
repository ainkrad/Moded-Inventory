<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="interment_policy_form" model="ir.ui.view">
            <field name="name">Policy</field>
            <field name="model">interment.policy</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object"
                                class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button"
                                options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                        <group colspan="2">
                            <field name="name" string="Policy" style="resize:none"/>
                            <field name="is_parent"/>
                            <field name="policies_ids" widget='many2many' attrs="{'invisible':[('is_parent','=',False)]}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="interment_policy_view_action" model="ir.actions.act_window">
            <field name="name">Interment Policies</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">interment.policy</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
              </p><p>
                <!-- More details about what a user can do with this object will be OK -->
              </p>
            </field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="interment_policy_menu_1" name="Interment Policies" parent="Config_menu_parent" action="interment_policy_view_action" sequence=""/>
        <record id="print_policy_form" model="ir.ui.view">
            <field name="name">print.policy.form</field>
            <field name="model">print.policy</field>
            <field name="arch" type="xml">
                <form string="">
                    <sheet>
                        <group>
                            <field name="name" required="1"/>
                            <field name="dateDone" required="1"/>
                            <field name="policy_id" options='{"no_open": True,"no_create": 1, "no_create_edit": 1}' required="1"/>
                        </group>
                        <br/>
                        <br/>
                        <br/>
                        <button name="print_report" string="Download PDF" type="object" class="btn btn-sm oe_stat_button"/>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="print_policy_view" model="ir.actions.act_window">
            <field name="name">Print</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">print.policy</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
			<!--<field name="target">new</field>-->
            <field name="target">inline</field>
        </record>

        <menuitem id="print_report" name="Report" sequence="" parent="BRDC_menu_main"/>
        <menuitem id="print_policy_view_id" name="Policies on Interment" parent="print_report" action="print_policy_view" sequence=""/>


    </data>
</odoo>