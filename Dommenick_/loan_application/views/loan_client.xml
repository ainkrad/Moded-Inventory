<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form_3" model="ir.ui.view">
          <field name="name">Customer</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="loan_application.view_partner_form_2"/>
          <field name="arch" type="xml">

                <xpath expr="//field[@name='company_type']" position="attributes">
                    <attribute name="invisible">1</attribute>
                    <attribute name="readonly">0</attribute>
                </xpath>
              <xpath expr="//sheet/group/group[1]" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>

              <xpath expr="//sheet/group/group[2]" position="attributes">
                  <attribute name="invisible">1</attribute>
              </xpath>
              <xpath expr="//sheet/group" position="attributes">
                  <attribute name="string">General Information</attribute>
              </xpath>
              <xpath expr="//sheet/group" position="after">
                  <group string="Address">
                      <group>
                          <field name="street" placeholder="Street..." string="Street" attrs="{'required': [('company_type','=', 'person')]}" style="resize:none"/>
                          <field name="country_id"
                                 placeholder="Country"
                                 options='{"no_create": 1, "no_create_edit": 1}'/>
                      </group>
                      <group>

                          <field name="province_id"
                                 placeholder="Province"
                                 options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                          <field name="municipality_id"
                                 placeholder="City/Municipality"
                                 options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                          <field name="barangay_id"
                                 placeholder="Barangay"
                                 options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'/>
                      </group>
                  </group>
                  <group col="6">
                      <group  attrs="{'invisible':[('is_company','=',True)]}"><field name="is_deceased"/></group>
                      <group><field name="is_agent"/></group>
                  </group>
                  <group attrs="{'invisible':[('is_deceased','=',False)]}">
                      <group><field name="DateOfDeath" attrs="{'required':[('is_deceased','=',True)]}"/></group>
                      <group><field name="CauseOfDeath" attrs="{'required':[('is_deceased','=',True)]}"/></group>
                  </group>
              </xpath>

              <xpath expr="//sheet/group" position="inside">
                  <group>
                      <label for="last_name" string="Name"  attrs="{'invisible': [('company_type','=', 'company')]}"/>
                      <field name="last_name" nolabel="1" attrs="{'required': [('company_type','=', 'person')],'invisible': [('company_type','=', 'company')]}" string=" " placeholder="Last Name"/>
                      <field name="first_name" attrs="{'required': [('company_type','=', 'person')],'invisible': [('company_type','=', 'company')]}"  string=" " placeholder="First Name"/>
                      <field name="middle_name"  string=" " placeholder="Middle Name" attrs="{'invisible': [('company_type','=', 'company')]}"/>
                      <label for="suffix" string="Suffix"  class="oe_edit_only" attrs="{'invisible': [('company_type','=', 'company')]}"/>
                      <field name="suffix" nolabel="1" attrs="{'invisible': [('company_type','=', 'company')]}"/>
                      <field name="TIN" attrs="{'invisible': [('company_type','=', 'person')]}"/>
                      <field name="website" widget="url" placeholder="e.g. www.example.com" attrs="{'invisible': [('company_type','=', 'person')]}"/>
                  </group>
              </xpath>

              <xpath expr="//sheet/group/group[3]" position="after">
                  <group>
                      <field name="mothermaiden"
                             attrs="{'invisible': [('company_type','=', 'company')]}"/>
                             <!--widget="many2many_tags"-->
                      <!--/>-->
                      <field name="birthdate" attrs="{'required': [('company_type','=', 'person')],'invisible': [('company_type','=', 'company')]}"/>
                      <field name="phone" string="Mobile/Landline" attrs="{'required': [('company_type','=', 'company')]}"/>
                      <field name="email"/>
                  </group>
              </xpath>



              <xpath expr="//field[@name='parent_id']" position="attributes">
                  <attribute name="invisible">1</attribute>
                  <attribute name="readonly">1</attribute>
              </xpath>

              <!--<xpath expr="//sheet/div[2]/div" position="inside">-->
                  <!--<group><field name="ClientNo" placeholder="Client Number" string="P.A. No" attrs="{'invisible': [('company_type','=', 'company')]}"/></group>-->
              <!--</xpath>-->
              <xpath expr="//notebook/page[3]/group/group[2]/field[@name='supplier']" position="attributes">
                  <attribute name="required">1</attribute>
                  <attribute name="readonly">1</attribute>
                  <attribute name="default">0</attribute>
              </xpath>
            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
       <record id="view_partner_form_4" model="ir.ui.view">
          <field name="name">Customer</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="loan_application.view_partner_form_2"/>
          <field name="arch" type="xml">

              <xpath expr="//field[@name='property_account_receivable_id']" position="attributes">
                  <attribute name="required">0</attribute>
                  <attribute name="readonly">0</attribute>
              </xpath>
              <xpath expr="//field[@name='property_account_payable_id']" position="attributes"
              ><attribute name="required">0</attribute>
                  <attribute name="readonly">0</attribute>
              </xpath>

              <xpath expr="//notebook/page[1]/field[@name='child_ids']/form/sheet/group/group[2]/field[@name='name']" position="replace">
                  <field name="street" placeholder="Street..." string="Home"/>
              </xpath>
              <xpath expr="//notebook/page[1]/field[@name='child_ids']/form/sheet/group/group[1]" position="attributes">
                  <attribute name="invisible">1</attribute>
                  <attribute name="required">0</attribute>
                  <attribute name="readonly">1</attribute>
              </xpath>
              <xpath expr="//notebook/page[1]/field[@name='child_ids']/form/sheet/group/group[2]" position="attributes">
                  <attribute name="invisible">1</attribute>
                  <attribute name="required">0</attribute>
                  <attribute name="readonly">1</attribute>
              </xpath>
              <xpath expr="//notebook/page[1]/field[@name='child_ids']/form/sheet/group" position="before">
                  <h1><field name="name" attrs="{'readonly': [('type','=', 'contact')], 'required': [('type','!=', 'contact')]}" nolabel="1"/></h1>
              </xpath>
              <xpath expr="//notebook/page[1]/field[@name='child_ids']/form/sheet/group/group[2]" position="after">
                  <group string="Address">
                      <field name="street" placeholder="Street..." string="Home" required="1"/>
                      <field name="country_id" placeholder="Country" options='{"no_create": 1, "no_create_edit": 1}' required="1"/>
                      <field name="province_id"
                             placeholder="Province"
                             options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                             required="1"
                      />
                      <field name="municipality_id"
                             placeholder="City/Municipality"
                             options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                             required="1"/>
                      <field name="barangay_id"
                             placeholder="Barangay"
                             options='{"no_open": True,"no_create": 1, "no_create_edit": 1}'
                             required="1"/>
                  </group>
                  <group string="Other Contact" attrs="{'invisible': [('type','!=', 'contact')]}">
                      <field name="last_name"/>
                      <field name="first_name"/>
                      <field name="middle_name"/>
                      <field name="suffix"/>
                      <field name="phone"/>
                  </group>
              </xpath>
              <xpath expr="//notebook/page[1]/field[@name='child_ids']/kanban/templates/t/div/div[2]" position="replace">
                    <div class="oe_kanban_details">
                        <strong class="oe_partner_heading"><field name="name"/></strong>
                        <ul>
                            <li t-if="record.parent_id.raw_value and !record.function.raw_value"><field name="parent_id"/></li>
                            <li t-if="!record.parent_id.raw_value and record.function.raw_value"><field name="function"/></li>
                            <li t-if="record.parent_id.raw_value and record.function.raw_value"><field name="function"/> at <field name="parent_id"/></li>
                            <li t-if="record.municipality_id.raw_value and !record.country_id.raw_value"><field name="municipality_id"/></li>
                            <li t-if="!record.municipality_id.raw_value and record.country_id.raw_value"><field name="country_id"/></li>
                            <li t-if="record.municipality_id.raw_value and record.country_id.raw_value"><field name="municipality_id"/>, <field name="country_id"/></li>
                            <li t-if="record.phone.raw_value" class="o_text_overflow"><field name="phone"/></li>
                        </ul>
                        <div class="oe_kanban_partner_links"/>
                    </div>
              </xpath>
            </field>
        </record>


        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form_6" model="ir.ui.view">
          <field name="name">Customer</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="loan_application.view_partner_form_2"/>
          <field name="arch" type="xml">

                <xpath expr="//notebook/page[1]" position="before" autofocus="autofocus">
                    <page string="Client Personal Information" attrs="{'invisible': [('company_type','=', 'company')]}">
                        <group>
                            <group>
                                <field name="age"/>
                                <field name="gender"/>
                                <field name="weight"/>
                                <field name="height"/>
                            </group>
                            <group>
                                <field name="marital"/>
                                <field name="religion_id" options='{"no_open": True}'/>
                                <field name="nationality_id" options='{"no_open": True}'/>
                            </group>
                        </group>
                        <group>
                            <group string="Educational Background">
                                <field name="attainment"/>
                                <field name="yearGrad"/>
                                <field name="schoolGrad" style="resize:none"/>
                            </group>
                            <group string="Community Tax Certificate">
                                <field name="ctcno"/>
                                <field name="ctcd"/>
                                <field name="ctcpi" style="resize:none"/>
                            </group>
                        </group>
                    </page>
              </xpath>

              <xpath expr="//notebook/page[1]" position="after">
                  <page string="Employment Information" attrs="{'invisible': [('company_type','=', 'company')]}">
                      <group>
                          <field name="is_unemployed" invisible="1"/>
                          <field name="employment_state_1" options="{'horizontal': true}" widget="radio" />
                          <field name="company_name_id" attrs="{'invisible': [('is_unemployed','=',True)]}"/>
                      </group>
                      <group attrs="{'invisible': [('is_unemployed','=',True)]}">
                          <group>
                              <field name="position" style="resize:none"/>
                          </group>
                          <group>
                              <field name="monthly_income"/>
                          </group>
                      </group>
                      <group attrs="{'invisible': [('is_unemployed','=',True)]}">
                          <field name="employment_state" options="{'horizontal': true}" widget="radio"/>

                          <field name="is_others" invisible="1"/>
                          <field name="if_others"
                                 attrs="{'invisible': [('is_others','=',False)]}"
                                 string=" "
                          />
                      </group>
                  </page>
              </xpath>

            </field>
        </record>

        <!-- Inherit Form View to Modify it -->
        <record id="view_partner_form_7" model="ir.ui.view">
          <field name="name">Customer</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="loan_application.view_partner_form_2"/>
          <field name="arch" type="xml">

                 <xpath expr="//notebook/page[2]" position="after">
                    <page string="Other Information">
                        <field name="is_single" invisible="1"/>
                        <group string="Spouse" attrs="{'invisible': ['|',('company_type','=','company'),('is_single','=',True)]}">
                            <field name="spouse_id"/>
                        </group>
                        <group string="Personal Reference">
                            <field name="reference_ids" widget="many2many" nolabel="1" options="{'no_create_edit': True}"/>
                        </group>
                        <group>
                            <!--<field name="policies_ids" widget="many2many" nolabel="1"/>-->
                            <!--<field name="policy_name"/>-->
                        </group>

                    </page>
                </xpath>
              <xpath expr="//notebook/page[2]" position="after">
                  <page string="Agent Information">
                    <group  >
                        <group>
                            <field name="agency_id" attrs="{'invisible':[('is_agent','=',False)]}"/>
                            <field name="sales_agent_id"
                                   options='{"no_create": 1, "no_create_edit": 1}'
                                   attrs="{'invisible':[('is_agent','=',True)]}"
                            />
                            <field name="unit_manager_id"
                                   options='{"no_create": 1, "no_create_edit": 1}'
                                   attrs="{'invisible': [('agency_id','!=','sa'),('is_agent','=',True)]}"
                            />
                            <field name="agent_manager_id"
                                   options='{"no_create": 1, "no_create_edit": 1}'
                                   attrs="{'invisible': [('agency_id','=','am'),('is_agent','=',True)],'required': [('agency_id','=','sa')]}"
                            />
                        </group>
                        <group></group>
                    </group>
                  </page>
              </xpath>

              <xpath expr="//notebook/page[5]" position="replace"/>

            </field>
        </record>

        <record id="res_partner_kanban_view" model="ir.ui.view">
                <field name="name">Customer</field>
                <field name="model">res.partner</field>
                <field name="inherit_id" ref="base.res_partner_kanban_view"/>
                <field name="arch" type="xml">
                     <xpath expr="//field[@name='city']" position="replace">
                        <field name="municipality_id"/>
                    </xpath>
                    <xpath expr="//kanban/templates/t/div/div[3]" position="replace">
                        <div class="oe_kanban_details">
                            <strong class="oe_partner_heading"><field name="name"/></strong>
                            <ul>
                                <li t-if="record.parent_id.raw_value and !record.function.raw_value"><field name="parent_id"/></li>
                                <li t-if="!record.parent_id.raw_value and record.function.raw_value"><field name="function"/></li>
                                <li t-if="record.parent_id.raw_value and record.function.raw_value"><field name="function"/> at <field name="parent_id"/></li>
                                <!--<li t-if="record.municipality_id.raw_value and !record.country_id.raw_value"><field name="municipality_id"/></li>-->
                                <li t-if="!record.municipality_id.raw_value or record.country_id.raw_value"><field name="country_id"/></li>
                                <!--<li t-if="record.municipality_id.raw_value and record.country_id.raw_value"><field name="municipality_id"/>, <field name="country_id"/></li>-->
                                <li t-if="record.email.raw_value" class="o_text_overflow"><field name="email"/></li>
                                <!--<li><field name="company_type"/></li>-->
                            </ul>
                            <div class="oe_kanban_partner_links"/>
                        </div>
                    </xpath>
                </field>
            </record>

        <record id="view_partner_tree_1" model="ir.ui.view">
            <field name="name">Customer</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_tree"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='display_name']" position="replace">
                    <field name="name" string="Name"/>
                    <!-- Add new fields here -->
                </xpath>

            </field>
        </record>


    </data>
</odoo>