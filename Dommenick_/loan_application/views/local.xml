<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="config_region_tree" model="ir.ui.view">
            <field name="name">config.region.tree</field>
            <field name="model">config.region</field>
            <field name="arch" type="xml">
                <tree string="Region">
                    <field name="name"/>
                    <field name="region_code"/>
                </tree>
            </field>
        </record>
        <record id="config_region_form" model="ir.ui.view">
            <field name="name">config.region.form</field>
            <field name="model">config.region</field>
            <field name="arch" type="xml">
                <form string="Region">
                    <sheet string="Region">
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="region_code"/>
                            </group>
                            <group>
                                <field name="country_id"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="config_region_action" model="ir.actions.act_window">
            <field name="name">Region</field>
            <field name="res_model">config.region</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
