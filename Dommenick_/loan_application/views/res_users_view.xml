<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="view_users_form_1" model="ir.ui.view">
            <field name="name">Users</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_form"/>
            <field name="arch" type="xml">

                <xpath expr="//sheet/div[3]" position="replace">
                    <div class="oe_title">
                        <h1><field name="name" required="1"/></h1>
                        <field name="email" invisible="1"/>
                        <group>
                            <field name="partner_id" readonly="1" required="0" groups="base.group_no_one"
                                    attrs="{'invisible': [('id', '=', False)]}"/>
                        </group>
                    </div>
                </xpath>

                <xpath expr="//field[@name='name']" position="attributes">
                   <attribute name="readonly">1</attribute>
                    <attribute name="required">0</attribute>
                    <attribute name="nolabel">1</attribute>
                </xpath>

                <xpath expr="//sheet/div[3]" position="after">
                    <group>
                        <group>
                            <label for="last_name" string="Name"/>
                            <field name="last_name" nolabel="1" required="1" string=" " placeholder="Last Name"/>
                            <field name="first_name" required="1"  string=" " placeholder="First Name"/>
                            <field name="middle_name"  string=" " placeholder="Middle Name" />
                            <label for="suffix" string="Suffix" class="oe_edit_only"/>
                            <field name="suffix" nolabel="1" />
                        </group>
                        <group><field name="login" string="Username"/></group>
                    </group>
                </xpath>
            </field>
        </record>


    </data>
</odoo>