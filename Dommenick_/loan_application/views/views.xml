                      <!--/>-->
                  </header>
              </xpath>
          </field>
      </record>

      <!-- Inherit Form View to Modify it -->
      <record id="view_partner_form_2" model="ir.ui.view">
          <field name="name">Customer</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="loan_application.view_partner_form_1"/>
          <field name="arch" type="xml">

              <xpath expr="//field[@name='name']" position="replace">
                  <field name="name" required="1" attrs="{'readonly': [('company_type','!=', 'company')]}"/>
              </xpath>



          </field>
      </record>



      <record id="customer_action" model="ir.actions.act_window">
          <field name="name">Loan</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">res.partner</field>
          <field name="view_mode">kanban,tree,form</field>
          <field name="context" eval="{'search_default_customer': 1}"/>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              <!-- Add Text Here -->
            </p><p>
              <!-- More details about what a user can do with this object will be OK -->
            </p>
          </field>
      </record>

      <record id="religion_action" model="ir.actions.act_window">
          <field name="name">religion</field>
          <field name="type">ir.actions.act_window</field>
          <field name="res_model">client.religion</field>
          <field name="view_mode">tree,form</field>
          <field name="help" type="html">
            <p class="oe_view_nocontent_create">
              <!-- Add Text Here -->
            </p><p>
              <!-- More details about what a user can do with this object will be OK -->
            </p>
          </field>
      </record>
      <!-- Inherit Form View to Modify it -->
      <record id="view_res_partner_filter_1" model="ir.ui.view">
           <field name="name">res.partner.select</field>
            <field name="model">res.partner</field>
          <field name="inherit_id" ref="base.view_res_partner_filter"/>
          <field name="arch" type="xml">

              <xpath expr="//search/filter[@name='inactive']" position="replace">
                  <filter string="Inactive Customer" name="inactive" domain="[('active','=',False)]"/>
              </xpath>


              <!--<filter string="Customers" name="customer" domain="[('customer','=',1), ('parent_id', '=', False)]"/>-->

          </field>
      </record>

      <!-- Inherit Form View to Modify it -->
      <record id="view_partner_form_9" model="ir.ui.view">
          <field name="name">Customer</field>
          <field name="model">res.partner</field>
          <field name="inherit_id" ref="loan_application.view_partner_form_2"/>
          <field name="arch" type="xml">

              <xpath expr="//form" position="attributes">
                  <attribute name="create">0</attribute>
              </xpath>

          </field>
      </record>
      <!-- This Menu Item will appear in the Upper bar, That's why It needs NO parent or action -->
      <menuitem id="BRDC_menu_main" name="Loan" sequence=""/>
      <menuitem id="BRDC_menu_parent" name="Loan" sequence="1" parent="BRDC_menu_main"/>
      <menuitem id="Loan_menu_id" name="Customer" sequence="1" web_icon="loan_application,static/img/icon_image.png" action="customer_action" parent="BRDC_menu_parent"/>
      <menuitem id="Config_menu_parent" name="Configuration" sequence="" parent="BRDC_menu_main"/>
      <menuitem id="religion_menu_id" name="Religion" sequence="" action="religion_action" parent="Config_menu_parent"/>


  </data>
</odoo>