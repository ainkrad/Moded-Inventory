<odoo>
    <data>
        <!-- Inherit Form View to Modify it -->
        <record id="inherited_interment_quotation_request" model="ir.ui.view">
            <field name="name">inherited interment quotation request</field>
            <field name="model">interment.quotation.request</field>
            <field name="inherit_id" ref="loan_information.interment_quotation_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='product_id']" position="after">
                    <field name="ls_number"/>
                </xpath>

            </field>
        </record>
    </data>
</odoo>